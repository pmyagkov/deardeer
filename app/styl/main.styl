$edge_width = 50px

$mail_color = black

body
  font-size: 16px
  margin: 0
  background-image: url("../images/wood/0.jpg")
  overflow: hidden
  white-space: nowrap

a
  color: black

.anchor
  text-decoration: none

.aside
  width: $aside_width
  height: 100%
  background: rgba(#fff, 0.2)
  //background-repeat: repeat-y
  position: relative
  display: block

