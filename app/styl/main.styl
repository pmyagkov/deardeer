.main
  position: absolute
  left: $aside_width
  right: 0
  bottom: 0
  top: 0

  display: block

  padding: 50px 50px 50px 0

  .main-inner
    box-shadow: inset 1px 1px 9px 1px rgba(0,0,0,0.8)
    position: absolute
    left: 0
    bottom: $edge_width
    top: $edge_width
    right: $edge_width

    &::before
      content: ''
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0

      background-color: rgba(#fff, 0.7)

  .content
    position: relative
    height: 100%

    &::after
      content: ''
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      box-shadow: inset 0px 0px 3px 2px rgba(0,0,0,0.4)

.stories
